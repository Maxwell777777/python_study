###1.guessing game加上gui
import random
import easygui as g

secret=random.randint(0,20)
#print(secret)
n=1
number=g.integerbox(msg='please input a number,3 opportunities:', title=' ')

while(n<4):
    if (number==secret):
        print('you are right!')
        break
    else:
        if (number>secret):
            if(n==3):
                print("it's smaller")
                n=n+1
            else:
                number=g.integerbox(msg='it\'s smaller', title=' ')
                n=n+1
        else:
            if(n==3):
                print("it's bigger")
                n=n+1
            else:
                number=g.integerbox(msg='it\'s bigger', title=' ')
                n=n+1
if(n==4):
    #print('you lose!')
    g.msgbox('you lose!')
else:
    #print('nice job!')
    g.msgbox('nice job!')
